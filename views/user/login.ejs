<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>

    <%- include ../includes/includes.ejs %>

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-xs-4 col-xs-offset-6">
                <form>
                    <div class="form-group">
                        <label for="txt_email">Email address</label>
                        <input type="email" class="form-control" id="txt_email" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="txt_pass">Password</label>
                        <input type="password" class="form-control" id="txt_pass" placeholder="Password">
                    </div>
                    <div class="alert alert-danger hidden" id="lbl_response">Invalid email or password!</div>
                    <button type="submit" class="btn btn-primary" id="btn_submit">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <%- include socket.ejs %>

</body>
</html>